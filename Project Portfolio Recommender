<body>
    <h1>Portfolio Project Recommender</h1>
    <div class="container">
        <div class="skills">
            <label><input type="checkbox" value="HTML">HTML</label>
            <label><input type="checkbox" value="CSS">CSS</label>
            <label><input type="checkbox" value="JavaScript">JavaScript</label>
            <label><input type="checkbox" value="React">React</label>
            <label><input type="checkbox" value="Python">Python</label>
            <label><input type="checkbox" value="Machine Learning">Machine Learning</label>
            <label><input type="checkbox" value="Java">Java</label>
            <label><input type="checkbox" value="Node.js">Node.js</label>
        </div>
        <button onclick="recommendProjects()">Get Recommendations</button>
        <button onclick="clearSelections()">Clear</button>
        <div class="results" id="results"></div>
    </div>

    <script>
        const projectIdeas = {
            "HTML": ["Personal Portfolio Website", "Restaurant Landing Page"],
            "CSS": ["Animated Resume", "Modern UI Clone"],
            "JavaScript": ["Todo List App", "Weather App using API"],
            "React": ["E-commerce Product Page", "Chat Application UI"],
            "Python": ["Web Scraper", "Data Visualization Dashboard"],
            "Machine Learning": ["Spam Email Classifier", "House Price Prediction"],
            "Java": ["Library Management System", "Banking Application"],
            "Node.js": ["REST API for Blog", "Real-time Chat Server"]
        };

        function recommendProjects() {
            const checkboxes = document.querySelectorAll('.skills input:checked');
            const selectedSkills = Array.from(checkboxes).map(cb => cb.value);
            const resultsDiv = document.getElementById('results');
            resultsDiv.innerHTML = "";

            if (selectedSkills.length === 0) {
                resultsDiv.innerHTML = "<p>Please select at least one skill.</p>";
                return;
            }

            let recommendations = [];
            selectedSkills.forEach(skill => {
                if (projectIdeas[skill]) {
                    recommendations.push(...projectIdeas[skill]);
                }
            });

            resultsDiv.innerHTML = `<h2>Recommended Projects:</h2><ul>${recommendations.map(p => `<li>${p}</li>`).join('')}</ul>`;
        }

        function clearSelections() {
            document.querySelectorAll('.skills input').forEach(cb => cb.checked = false);
            document.getElementById('results').innerHTML = "";
        }
    </script>
</body>
</html>
